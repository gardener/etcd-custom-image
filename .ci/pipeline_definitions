etcd-custom-image:
  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
          preprocess: 'noop'

  jobs:
    update-version:
      traits:
        cronjob:
          interval: '24h'
      steps:
        update_version:
          image: 'eu.gcr.io/gardener-project/cc/job-image:1.778.0'
          publish_to:
          - source

    head-update:
      repo:
        trigger: true
      traits:
        draft_release: ~
        publish:
          oci-builder: 'docker'
          dockerimages:
            etcd:
              registry: 'gcr-readwrite'
              image: 'eu.gcr.io/gardener-project/gardener/etcd'
              dockerfile: 'Dockerfile'
              tag_as_latest: True
              inputs:
                repos:
                  source: ~
        release:
          nextversion: noop
          release_commit_publishing_policy: tag_only
        component_descriptor:
          component_labels:
          - name: 'cloud.gardener.cnudie/dso/scanning-hints/source_analysis/v1'
            value:
              policy: 'skip'
